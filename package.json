{
  "name": "coracle",
  "private": true,
  "version": "0.6.7",
  "type": "module",
  "workspaces": [
    "lib/*"
  ],
  "scripts": {
    "dev": "npx vite --host",
    "test": "npm run test:app && npm run test:e2e",
    "test:app": "npx vitest --dir=tests/unit --watch=false",
    "test:lib": "npx vitest --dir=lib --watch=false",
    "test:unit": "npx vitest --watch=false",
    "test:integ": "cypress run",
    "release:android": "cap sync && cap build android --androidreleasetype APK --signing-type apksigner",
    "check:es": "eslint 'src/**/*.{js,ts,svelte}' --quiet",
    "check:ts": "svelte-check --tsconfig ./tsconfig.json --threshold error",
    "check:fmt": "git diff head --name-only --diff-filter d | grep -E '(js|ts|svelte)$' | xargs -r prettier --check",
    "check:errors": "run-s check:ts check:es",
    "check": "run-p check:errors check:fmt",
    "format": "git diff head --name-only --diff-filter d | grep -E '(js|ts|svelte)$' | xargs -r prettier --write",
    "watch": "find src -type f | entr -r",
    "clean:workspaces": "npm run clean --workspaces",
    "clean": "npm run clean:workspaces ; rm -Rf node_modules lib/*/node_modules dist",
    "build:workspaces": "npm run build --workspaces",
    "build:vite": "npx vite build",
    "build": "npm i --include dev ; npm run build:workspaces ; npm run install:all ; npm run build:vite",
    "rebuild": "npm run clean ; npm run build",
    "build:dist": "rm -rf dist && pwa-assets-generator && npm run build:vite",
    "install:all": "npm install --workspaces ; npm install",
    "deps": "npm list -ws --include-workspace-root ; npx npm-check-updates -ws --root ; npm outdated --ws --include-workspace-root"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@getalby/bitcoin-connect": "^3.7.0",
    "@scure/base": "^1.2.4",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tsconfig/svelte": "^5.0.4",
    "@types/throttle-debounce": "^5.0.2",
    "@vite-pwa/assets-generator": "^0.2.6",
    "@welshman/app": "file:./lib/app",
    "@welshman/content": "file:./lib/content",
    "@welshman/dvm": "file:./lib/dvm",
    "@welshman/editor": "file:./lib/editor",
    "@welshman/feeds": "file:./lib/feeds",
    "@welshman/lib": "file:./lib/lib",
    "@welshman/net": "file:./lib/net",
    "@welshman/signer": "file:./lib/signer",
    "@welshman/store": "file:./lib/store",
    "@welshman/util": "file:./lib/util",
    "autoprefixer": "^10.4.21",
    "classnames": "^2.5.1",
    "compressorjs": "^1.2.1",
    "date-picker-svelte": "^2.15.1",
    "dotenv": "^16.4.7",
    "favicons": "^7.2.0",
    "fuse.js": "^7.1.0",
    "happy-dom": "^17.4.3",
    "hash-wasm": "^4.12.0",
    "hls.js": "^1.5.20",
    "idb": "^8.0.2",
    "insane": "^2.6.2",
    "marked": "^15.0.7",
    "normalize-url": "^8.0.1",
    "nostr-signer-capacitor-plugin": "^0.0.3",
    "nostr-tools": "^2.10.4",
    "postcss": "^8.5.3",
    "qr-scanner": "^1.4.2",
    "qrcode": "^1.5.4",
    "rollup": "^4.35.0",
    "sharp": "^0.33.5",
    "svelte": "^5.22.6",
    "svelte-check": "^4.1.5",
    "svelte-link-preview": "^0.3.3",
    "svelte-loading-spinners": "^0.3.6",
    "svelte-preprocess": "^6.0.3",
    "svelte-range-slider-pips": "^3.2.2",
    "tailwindcss": "^3.4.17",
    "throttle-debounce": "^5.0.2",
    "tippy.js": "^6.3.7",
    "uuid": "^11.1.0",
    "vite": "^6.2.1",
    "vite-plugin-html-config": "^2.0.2",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vite-plugin-pwa": "^0.21.1",
    "vitest": "^3.0.8"
  },
  "devDependencies": {
    "@capacitor/android": "^6.1.2",
    "@capacitor/app": "^6.0.1",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^6.1.2",
    "@capacitor/core": "^6.1.2",
    "@capacitor/ios": "^6.1.2",
    "bowser": "^2.11.0",
    "cypress": "^14.1.0",
    "esbuild": "^0.25.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-svelte": "^3.1.0",
    "gts": "^6.0.2",
    "happy-dom": "^17.4.3",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typedoc": "^0.27.9",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.26.0"
  }
}
